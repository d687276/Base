<div class="modal fade" id="myModalSession" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title" id="myModalSessionLabel">Confirmar</h4>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div id="myModalSessionLabel" class="modal-body">
        Seguro que desea cerrar la sesion?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" id="myModalSessionBtnSi" onclick="LogOut()">Si</button>
        <button type="button" class="btn btn-primary" data-bs-dismiss="modal" aria-label="Close">No</button>
      </div>
    </div>
  </div>
</div>


<form method="post" action="/logout" style="display: none;"> 
  <input type="submit" id="buttonLogout" name="buttonLogout">    
</form>


<script>


function msgLogOut() {
  var modal1 = new bootstrap.Modal(document.getElementById('myModalSession'));
  modal1.show();
}


function LogOut() {
 document.getElementById("buttonLogout").click()
